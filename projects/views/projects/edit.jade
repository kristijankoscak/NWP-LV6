extends ../layout

block content
	h1.
		#{title}
	form#formAddproject(name="updateproject",method="post",action="/projects/#{project._id}/edit",enctype='application/x-www-form-urlencoded')
		p Project name: 
			input#inputName(type="text", value='#{project.name}', name="name")
		p Description:
			input#inputDescription(type="text", value='#{project.description}', name="description")
		p Price:
			input#inputPrice(type="number",value='#{project.price}', name="price")
		p Done job:
			textarea#inputDoneJob(name="doneJob", rows="4").form-control= project.doneJob
		p Workers:
			textarea#inputWorkers(name="workers", rows="4").form-control= project.workers
		p Start time:
			input#inputStartDate(type="date", value='#{projectStartDate}', name="startDate")
		p End time:
			input#inputEndDate(type="date", value='#{projectEndDate}', name="endDate")
		p
			input(type='hidden',value='PUT',name='_method') 
		p
			button#btnSubmit(type="submit") Update